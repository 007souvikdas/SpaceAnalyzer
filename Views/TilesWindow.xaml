<Window x:Class="SpaceAnalyzer.Views.TilesWindow" xmlns:DV="clr-namespace:System.Windows.Controls.DataVisualization;assembly=System.Windows.Controls.DataVisualization.Toolkit" xmlns:DVC="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:SpaceAnalyzer.Views" mc:Ignorable="d" Title="Available Files" Height="300" Width="555" ResizeMode="NoResize">
    <Grid Background="#e5e5e5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <local:TileUserControl ListProperty="{Binding ValueDict[Videos]}" Command="{Binding TileClickCommand}" Grid.Row="0" Grid.Column="0"/>
        <local:TileUserControl ListProperty="{Binding ValueDict[Audios]}" Grid.Row="0" Grid.Column="1"/>
        <local:TileUserControl ListProperty="{Binding ValueDict[Images]}" Grid.Row="0" Grid.Column="2"/>
        <local:TileUserControl ListProperty="{Binding ValueDict[Docs]}" Grid.Row="0" Grid.Column="3"/>
        <DVC:Chart Background="Transparent" BorderBrush="Transparent" Width="Auto" Height="Auto" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" LegendTitle="Type of Files:">
            <DVC:Chart.Series>
                <DVC:PieSeries Title="Files" ItemsSource="{Binding FileTypePercentageValue}" IndependentValueBinding="{Binding Path=Key}" DependentValueBinding="{Binding Path=Value}"></DVC:PieSeries>
            </DVC:Chart.Series>
        </DVC:Chart>
    </Grid>
</Window>